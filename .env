# LLM API Keys (Choose one or more)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Configuration
DEFAULT_LLM_PROVIDER=openai  # Options: openai, anthropic
DEFAULT_MODEL=gpt-4  # For OpenAI: gpt-4, gpt-3.5-turbo / For Anthropic: claude-3-opus-20240229

# Database Configuration
DATABASE_TYPE=sqlite  # Options: sqlite, postgresql, mysql
DATABASE_PATH=jdbc:sqlite::memory:  # For SQLite

# PostgreSQL (if using)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=your_database
# POSTGRES_USER=your_username
# POSTGRES_PASSWORD=your_password

# MySQL (if using)
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_DB=your_database
# MYSQL_USER=your_username
# MYSQL_PASSWORD=your_password
